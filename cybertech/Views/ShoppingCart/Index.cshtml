@model cybertech.ViewModels.ShoppingCartViewModel
@{
    ViewBag.Title = "Shopping Cart";
}
<style>
   a {
    color: #ff6a00;
    text-decoration: none;
}
}

</style>

<h3>
    <em>Review</em> your cart:
</h3>

<div class="container">

    <div class="row">
        <div class="col-md-6">
            <table class="table table-condensed">
                <tr>
                    <td>

                        <p class="button">
                            @Html.ActionLink("Checkout >> ", "AddressAndPayment", "Checkout")
                        </p>
                        <div id="update-message">
                        </div>
                        <table>
                            <tr>
                                <th>
                                    Product Name
                                </th>
                               
                                <th>
                                    Price
                                </th>
                                
                                <th>
                                    Quantity
                                </th>
                                <th></th>
                            </tr>
                            @foreach (var item in Model.CartItems)
                            {
                                <tr id="row-@item.RecordId">
                                    <td>
                                        @Html.ActionLink(item.Product.ProductName, "Details",
               "Store", new { id = item.ProductId }, null)
                                        
                                    </td>

                                    <td>
                                        @item.Product.Price
                                    </td>
                                    <td id="item-count-@item.RecordId">
                                        @item.Count
                                    </td>
                                    <td>
                                        <a href="#" class="RemoveLink"
                                           data-id="@item.RecordId">
                                            Remove
                                            from cart
                                        </a>
                                    </td>
                                </tr>
                            }
                            <tr>
                                <td>
                                    Total
                                </td>
                                <td></td>
                                <td></td>
                                <td id="cart-total">
                                    @Model.CartTotal
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
